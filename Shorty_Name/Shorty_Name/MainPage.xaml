<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Shorty_Name.MainPage">

    <StackLayout BackgroundColor="Beige">
        
        <Entry x:Name="Fname" Placeholder="First Name" PlaceholderColor="HotPink" 
              Text="" 
               Keyboard="Text" TextColor="DarkRed" 
               HorizontalOptions="Center" WidthRequest="265" />
        <Entry x:Name="Lname" Placeholder="Last Name" PlaceholderColor="HotPink" 
               Text=""
               Keyboard="Text" TextColor="DarkRed" 
               HorizontalOptions="Center" WidthRequest="265" />
        
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
        <Button Text="add to" Clicked="OnClicked" BackgroundColor="HotPink"
                WidthRequest="100"/>
        <Button Text="Clear" Clicked="OnClickedClear" BackgroundColor="HotPink"
                WidthRequest="100"/>
        </StackLayout>
        
        <StackLayout x:Name="ResultList">
        
        </StackLayout>
</StackLayout>
</ContentPage>
